<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>{{input value=byKeyword class="btn btn-secondary btn-sm" type="text" placeholder="Search"}}</th>
      <th></th>
      <th>
        <button type="button" name="button" {{action "sortDir" "asc"}} class="btn btn-secondary btn-sm">▲</button>
        <button type="button" name="button" {{action "sortDir" "desc"}} class="btn btn-secondary btn-sm">▼</button>
      </th>
      <th></th>
    </tr>
    <tr>
      <th>Task</th>
      <th>Created</th>
      <th>Deadline</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    {{#each sortedTasks as |task|}}
      {{task-template task=task tagName="tr"}}
    {{/each}}
  </tbody>
</table>
