{{#if findedUser}}
  view my task list
  <button {{action "logout"}} class="btn btn-warning">Logout</button>
{{else}}
  <div class="row">
    <div class="col-6">
      {{#if user_error_login.status}}
        <div class="alert alert-danger" role="alert">
          <strong>{{user_error_login.message}}</strong>
        </div>
      {{/if}}
      <div class="form-group">
        {{input type="text" class="form-control" name="user_name" value=user.name placeholder="Enter your name"}}
      </div>
      <div class="form-group">
        {{input type="password" class="form-control" name="user_password" value=user.password placeholder="Enter your password"}}
      </div>
      <button {{action "login"}} class="btn btn-primary">Login</button>
      <button {{action "cancel"}} class="btn btn-danger">Cancel</button>
    </div>
  </div>
{{/if}}
