<div class="row">
  <div class="form-group col-12">
    {{input type="text" class="form-control" name="user_name" value=newTask.title placeholder="Enter your name"}}
  </div>
  <div class="form-group col-6">
    {{input type="date" class="form-control" name="user_name" value=newTask.created placeholder="Enter your name"}}
  </div>
  <div class="form-group col-6">
    {{input type="date" class="form-control" name="user_name" value=newTask.deadline placeholder="Enter your name"}}
  </div>
  <div class="form-group col-12">
    {{textarea class="form-control" name="user_name" value=newTask.comment placeholder="Enter your name"}}
  </div>
  <div class="col-12">
    <button {{action "createTask"}} class="btn btn-primary">Create new task</button>
  </div>
</div>
