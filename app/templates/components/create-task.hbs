<div class="row">
  <div class="col-12">
    <h3>Hi: {{user.name}} <img src="{{user.avatar}}" alt="" class="user-avatar"></h3>
    <p>You can create new task:</p>
  </div>
  <div class="form-group col-12">
    {{input type="text" class="form-control" name="user_name" value=newTask.title placeholder="Task title"}}
  </div>
  <div class="form-group col-6">
    <label for="">Creation date</label>
    {{input type="date" class="form-control" name="user_name" value=newTask.created}}
  </div>
  <div class="form-group col-6">
    <label for="">Deadline</label>
    {{input type="date" class="form-control" name="user_name" value=newTask.deadline placeholder="Enter your name"}}
  </div>
  <div class="form-group col-12">
    {{textarea class="form-control" name="user_name" value=newTask.comment placeholder="Comment"}}
  </div>
  <div class="col-12">
    <button {{action "createTask"}} class="btn btn-primary">Create</button>
  </div>
</div>
